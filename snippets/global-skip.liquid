{% capture skip_html %}
	<div class="global-skip">
		<a class="btn" href="#main">Skip to content</a>
	</div>

	<style>

		.global-skip a {
			position: fixed;
			top: calc(var(--s-announcement) + var(--s-2));
			left: var(--s-edge);
			-webkit-transform: translateY(-100vh);
			transform: translateY(-100vh);
			z-index: 1000;
		}
		 
		.global-skip a:focus {
			-webkit-transform: translateY(0);
			transform: translateY(0);
		}

	</style>
{% endcapture %}

{{ skip_html | strip_newlines | replace: '	', '' }}