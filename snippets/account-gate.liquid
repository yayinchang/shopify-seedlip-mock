<div class="account-gate-wrapper">
<section class="account-gate">
<div class="c-1 f-h">
	<div class="account-login">
		{% form 'customer_login' %}
			<div class="account-gate-header type-spacing">
				<h1 class="t-h-3">Log In</h1>
				<p>Welcome back!</p>

				{% if template.name == 'login' %}
					{{ form.errors | default_errors }}
				{% endif %}
			</div>

			<div class="account-gate-content">
				<div class="field">
					<input 
						type="email" 
						name="customer[email]" 
						id="account-login-email" 
						{% if form.errors contains 'email' %} class="error"{% endif %} 
						autocorrect="off" 
						autocapitalize="off"
						autocomplete="on">
					<label for="account-login-email">Email</label>
				</div>

				{% if form.password_needed %}
					<div class="field">
						<input 
							type="password" 
							name="customer[password]" 
							id="account-login-password" 
							{% if form.errors contains 'password' %} class="error"{% endif %}
							autocomplete="off">
						<label for="account-login-password">Password</label>
					</div>
				{% endif %}
			</div>

			<div class="account-gate-footer">
				<input 
					type="submit" 
					class="btn" 
					value="Log In">

				<button 
					type="button" 
					class="reset-password-trigger t-l-2">
				Forgot Your Password?</button>
			</div>
		{% endform %}
	</div>

	<div class="account-register">
		{% form 'create_customer' %}
			<div class="account-gate-header type-spacing">
				<h2 class="t-h-3">Create an Account</h2>
				<p>Create an account to access your profile info, order history and more.</p>

				{% if template.name == 'register' %}
					{{ form.errors | default_errors }}
				{% endif %}
			</div>

			<div class="account-gate-content">
				<div class="field-group">
					<div class="field">
						<input 
							type="text" 
							name="customer[first_name]"
							{% if form.first_name %} value="{{ form.first_name }}"{% endif %} 
							autocapitalize="words" 
							id="account-register-first-name">
						<label for="account-register-first-name">First Name</label>
					</div>

					<div class="field">
						<input 
							type="text" 
							name="customer[last_name]"
							{% if form.last_name %} value="{{ form.last_name }}"{% endif %} 
							autocapitalize="words" 
							id="account-register-last-name">
						<label for="account-register-last-name">Last Name</label>
					</div>
				</div>

				<div class="field">
					<input 
						type="email" 
						name="customer[email]"
						{% if form.errors contains 'email' %} class="error"{% endif %}
						{% if form.email %} value="{{ form.email }}"{% endif %} 
						autocorrect="off" 
						autocapitalize="off" 
						id="account-register-email">
					<label for="account-register-email">Your Email</label>
				</div>

				<div class="field">
					<input 
						type="password" 
						name="customer[password]" 
						id="account-register-password"
						{% if form.errors contains 'password' %} class="error"{% endif %} 
						autocomplete="off">
					<label for="account-register-password">Password</label>
				</div>

				<div class="field label-inline">
					<input 
						type="hidden" 
						name="customer[accepts_marketing]">

					<input 
						type="checkbox" 
						name="customer[accepts_marketing]" 
						id="account-register-marketing"
						checked>

					<label 
						for="account-register-marketing" 
						class="t-l-2">
					Subscribe to our newsletter</label>
				</div>
			</div>

			<div class="account-gate-footer">
				<input 
					type="submit" 
					value="Create Account" 
					class="btn">
			</div>
		{% endform %}
	</div>
</div>
</section>

<section class="account-reset">
<div class="c-3">
	<div id="recover"></div>

	{% form 'recover_customer_password' %}
		<div class="account-gate-header type-spacing">
			<h2 class="t-h-3">Reset Password</h2>
			<p>Enter your email below and weâ€™ll send you a reset link.</p>
			{{ form.errors | default_errors }}
		</div>

		<div class="account-gate-content">
			<div class="field">
				<input 
					type="email" 
					size="30" 
					name="email" 
					id="account-recover-email">
				<label 
					for="account-recover-email">
					Email Address</label>
			</div>
		</div>

		<div class="account-gate-footer">
			<input type="hidden" name="return_to" value="/account"/>
			<input 
				type="submit" 
				value="Submit" 
				class="btn" 
				value="Send email">

			<button 
				type="button" 
				class="reset-password-cancel t-l-2">
			Cancel</button>
		</div>
	{% endform %}
</div>
</section>
</div>